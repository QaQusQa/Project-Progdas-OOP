@startuml
title "Use Case Diagram - Pembelian Barang di E-Commerce"

left to right direction
skinparam BackgroundColor white
skinparam usecase {
    BackgroundColor #F5F5F5
    BorderColor #333333
    ArrowColor #333333
}

actor "Pembeli" as User

rectangle "E-Commerce System" {
    usecase "Masuk ke Website" as UC1
    usecase "Daftar" as UC2
    usecase "Login" as UC3
    usecase "Pilih Produk" as UC4
    usecase "Lihat Detail Produk" as UC5
    usecase "Masukkan ke Keranjang" as UC6
    usecase "Checkout" as UC7
    usecase "Pilih Metode Pembayaran" as UC8
    usecase "Konfirmasi Pembayaran" as UC9
    usecase "Terima Barang" as UC10
}

User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6
User --> UC7
User --> UC8
User --> UC9
User --> UC10

@enduml
